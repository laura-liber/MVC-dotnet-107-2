@{
    ViewData["Title"]= "Tasks";
}
 
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.1/css/all.css"
        integrity="sha384-vp86vTRFVJgpjF9jiIGPEEqYqlDwgyBgEF109VFjmqGmIY/Y4HV4d3Gp2irVfcrp" crossorigin="anonymous">

<link href="/css/app.css" rel="stylesheet">


<section id="list">
            <h3>Your Tasks</h3>
            <button id="btnDetails" class="btn btn-sm btn-dark">
                <i class="fas fa-eye"></i>
                Show Details
            </button>

            <div id="pendingTasks">
                <!--display tasks here-->
            </div>
        </section>

        <section id="details">
            <h3>Task Details</h3>

            <div class="control">
                <label>Id:</label>
                <input id="txtId" readonly type="text" class="form-control">
            </div>

            <div class="control">
                <label>Title:</label>
                <input id="txtTitle" type="text" class="form-control">

                <div id="alertTitle" class="alert alert-danger hide">
                    <b>Error:</b>Title should be at least 5 characters long.
                </div>
            </div>

            <div class="control">
                <label>Description:</label>
                <textarea id="txtDescription" type="text" class="form-control"></textarea>

                <div id="alertDesc" class="alert alert-danger hide">
                    <b>Error:</b>Description should be either Empty or More than 30 characters.
                </div>
            </div>

            <div class="control">
                <label>Important</label>
                <i id="iconImp" class="far fa-star"></i>
            </div>

            <div class="control">
                <label>Due Date:</label>
                <input id="txtDueDate" type="date" class="form-control">
            </div>

            <div class="control">
                <label>Location:</label>
                <input id="txtLocation" type="text" class="form-control">
            </div>

            <div class="control">
                <label>Alert Text:</label>
                <input id="txtAlert" type="text" class="form-control">
            </div>

            <div class="control">
                <label>Status:</label>
                <select id="selStatus" class="form-control">
                    <option value="0" disabled selected>-- Select Status --</option>
                    <option value="1">Pending</option>
                    <option value="2">In Progress</option>
                    <option value="3">Blocked</option>
                    <option value="4">Done</option>
                </select>
            </div>

            <div class="control">
                <button id="btnSave" class="btn btn-primary">Save Task</button>
            </div>

        </section>

<script src="/js/task.js"></script>
<script src="/js/app.js"></script>  